<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newSongName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateActivity">

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="232dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/add_audio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add audio" />

        <Button
            android:id="@+id/remove_audio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove last added audio" />

        <Button
            android:id="@+id/mix_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mix" />

        <Button
            android:id="@+id/random"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="random" />

    </LinearLayout>

    <EditText
        android:id="@+id/newName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="請輸入歌名"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>